<struts>
     <package name="pipeRollcallCompany" extends="private-default" namespace="/pipeRollcallCompany"> 
        <action name="loadRollcallCompanies" class="com.safetys.nbyhpc.web.action.PipeRollcallCompanyAction" method="loadRollcallCompanies">
            <result type="freemarker">/template/pipe_rollcall_company/pipe_rollcall_company_list.ftl</result>
        </action>
        <action name="createRollcallCompanyInit" class="com.safetys.nbyhpc.web.action.PipeRollcallCompanyAction" method="createRollcallCompanyInit">
            <result type="freemarker">/template/pipe_rollcall_company/pipe_rollcall_company_info.ftl</result>
        </action>
        <action name="loadRollcallCompany" class="com.safetys.nbyhpc.web.action.PipeRollcallCompanyAction" method="loadRollcallCompany">
            <result type="freemarker">/template/pipe_rollcall_company/pipe_rollcall_company_info.ftl</result>
        </action>
        <action name="loadRollcallCompanyOfCompaniesByNotice" class="com.safetys.nbyhpc.web.action.PipeRollcallCompanyAction" method="loadRollcallCompanyOfCompaniesByNotice">
