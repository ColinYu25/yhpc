        </action>
        <action name="loadRollcallCompaniesByCompany" class="com.safetys.nbyhpc.web.action.PipeRollcallCompanyAction" method="loadRollcallCompaniesByCompany">
            <result type="freemarker">/template/pipe_rollcall_company/pipe_rollcall_company_notice_list.ftl</result>
        </action>
        <action name="loadRollcallCompanyForNotice" class="com.safetys.nbyhpc.web.action.PipeRollcallCompanyAction" method="loadRollcallCompanyForNotice">
            <result type="freemarker">/template/pipe_rollcall_company/rollcall_notice_cha_info.ftl</result>
        </action>
        <action name="createRollcallCompany" class="com.safetys.nbyhpc.web.action.PipeRollcallCompanyAction" method="createRollcallCompany">
            <result name="success" type="redirect">/redirectServlet</result>
        </action>
        <action name="deleteRollcallCompany" class="com.safetys.nbyhpc.web.action.PipeRollcallCompanyAction" method="deleteRollcallCompany">
            <result name="success" type="redirect">/redirectServlet</result>
        </action>
        <action name="updateRollcallCompany" class="com.safetys.nbyhpc.web.action.PipeRollcallCompanyAction" method="updateRollcallCompany">
            <result name="success" type="redirect">/redirectServlet</result>
        </action>
        <action name="createRollcallCompanyForNoticeInit" class="com.safetys.nbyhpc.web.action.PipeRollcallCompanyAction" method="createRollcallCompanyForNoticeInit">
            <result type="freemarker">/template/pipe_rollcall_company/rollcall_notice_info.ftl</result>
        </action>
        <action name="updateRollcallCompanyForNotice" class="com.safetys.nbyhpc.web.action.PipeRollcallCompanyAction" method="updateRollcallCompanyForNotice">
            <result name="success" type="redirect">/redirectServlet</result>
        </action>
